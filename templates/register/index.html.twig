{% extends 'base.html.twig' %}

{% block title %}Hello RegisterController!{% endblock %}
{% block body %}

<link rel="stylesheet" href="style/style_login.css">
 <div class="container">
	<div class="d-flex justify-content-center h-100">
		<div class="card">
			<div class="card-header">
				<h3>Register account</h3>
			</div>
            <form method="post">
			<div class="card-body">
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-user"></i></span>
						</div>
							{{ form_widget(form.username, {'attr': {'placeholder' : 'username'}}) }}

					</div>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-key"></i></span>
						</div>
						{{ form_widget(form.password.first, {'attr': {'placeholder' : 'password'}}) }}

					</div>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-key"></i></span>
						</div>
						{{ form_widget(form.password.second, {'attr': {'placeholder' : 'confirm password'}}) }}
					</div>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-paper-plane"></i></span>
						</div>
						{{ form_widget(form.email, {'attr': {'placeholder' : 'email'}}) }}
					</div>
					<div class="form-group">
					{{ form_widget(form.register, {'attr': {'class' : 'btn float-right login_btn'}}) }}
					</div>
                   	<div class="card-footer">
				<div class="d-flex justify-content-center links">
					<a href="/">Back to main site</a>
				</div>
			
			</div>
				</form>
			</div>
		
		</div>
	</div>
</div>


{% endblock %}
